<!-- app/views/wallets/show.html.erb -->

<h1><%= @wallet.name %></h1>

<h2>Description:</h2>
<p><%= @wallet.description %></p>

<h2>Currency Amounts:</h2>
<%= render partial: 'currency_amounts/form', locals: { currency_amount: @currency_amount } %>

<h2>Saved Entries:</h2>
<table>
  <thead>
    <tr>
      <th>Wallet Address</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @saved_entries.each do |saved_entry| %>
      <tr>
        <td><%= saved_entry.wallet_address %></td>
        <td><%= saved_entry.amount %></td>
        <td><%= button_to 'Saved', '#', class: 'saved-entry-button', disabled: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  // Enable "Save" button for saved entries
  document.addEventListener('DOMContentLoaded', function() {
    var savedEntryButtons = document.querySelectorAll('.saved-entry-button');
    savedEntryButtons.forEach(function(button) {
      button.disabled = false;
      button.value = 'Saved';
    });
  });
</script>
